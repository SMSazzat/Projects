@model TouristGuide.Models.Spot

@{
    Layout = "~/Views/Shared/_user.cshtml";
}
<title> Spots</title>
<link href="~/landing/topstyle.css" rel="stylesheet" />
<link href="~/Theme/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<script src="~/landing/jquery.min.js"></script>
<script src="~/landing/popper.min.js"></script>
@*<script src="~/landing/bootstrap.min.js"></script>*@
<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 10px;
    }

        .card:hover {
            opacity: 0.4;
        }

    img {
        border-radius: 10px 10px 0 0;
    }

    .searchbox {
        position: absolute;
        top: 4.5%;
        left: 49.5%;
        height: 40px;
        border-radius: 40px;
        background: #4C4746;
        transform: translate(-50%,-50%);
    }

    .fas.fa-search {
        color: #E83511;
    }


    .searchtext {
        border: none;
        background: none;
        outline: none;
        color: #fff;
        transition: 0.4s;
        padding: 0;
        line-height: 35px;
        font-size: 16px;
        float: left;
        width: 0px;
    }

    .submitt {
        color: #E83511;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        float: right;
        background: #4C4746;
        justify-content: center;
        align-items: center;
        transition: 0.5s;
    }

    .searchbox:hover > .searchtext {
        width: 240px;
        padding: 0 6px;
    }

    .searchbox:hover > .submitt {
        background: #fff;
    }
</style>
<form method="post">
    <div class="container">

        <div class="row">
            <div class="searchbox">
                <input class="searchtext" type="text" name="name" placeholder="  type name or place">
                <button type="submit" class="submitt"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>

    </div>
</form>
<div class="row container" style="margin-top:30px;">
    @foreach (var spot in Model.Spots)
    {
        <div class="col-md-3 mt-2 w3_agile_services_grid">
            <div class="card" style="margin-bottom:20px;">
                <div class="hover06 column">
                    <div>
                        <figure><img src="@Url.Content(spot.Image)" style="height:190px; width:400px;" alt="" class="img-responsive" /> </figure>
                    </div>
                </div>
                <h4><b>@spot.Name</b></h4>
                <a href="/Spot/ViewSpot?id=@spot.Id" class="btn btn-primary">show</a>
            </div>

        </div>

    }
    <a class="gotopbtn" href="#"><p style="font-size:40px"><br />^</p></a>
</div>
