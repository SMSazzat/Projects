@model TouristGuide.Models.Package
@{
    Layout = "~/Views/Shared/_admin.cshtml";
}

@if (ViewBag.successMsg != null)
{
    <h3 style="color:darkcyan;margin-top:20px;margin-left:50px;"><b>@ViewBag.successMsg</b></h3>
}

@if (ViewBag.failMsg != null)
{
    <h3 style="color:darkcyan;margin-top:20px;margin-left:50px;"><b>@ViewBag.failMsg</b></h3>
}


    <div class="container" style="background-color:gainsboro;margin-top:20px;">

            <div class="form-horizontal">
                <h2>Delete Package</h2>
                <hr />

                <form method="post">

                    <div class="row" style="margin-top:20px">
                        <div class="col-md-3 text-right">
                            @Html.LabelFor(model => model.Offer, htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Offer, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="row" style="margin-top:20px">
                        <div class="col-md-3 text-right">
                            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" }, style = "width:60%;height:120px;" })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row" style="margin-top:10px">
                        <div class="col-md-4 text-right">
                            <input type="submit" value="Delete" class="btn btn-success" style="margin-bottom:10px" />
                        </div>
                        <td><a href="/Package/Show">Back to list</a></td>
                    </div>

                </form>
            </div>
    </div>
