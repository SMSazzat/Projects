@model TouristGuide.Models.Package

@{
    Layout = "~/Views/Shared/_admin.cshtml";
}

@if (ViewBag.successMsg != null)
{
    <h3 style="color:darkcyan;margin-top:20px;margin-left:50px;"><b>@ViewBag.successMsg</b></h3>
}

@if (ViewBag.failMsg != null)
{
    <h3 style="color:darkcyan;margin-top:20px;margin-left:50px;"><b>@ViewBag.failMsg</b></h3>
}


<div class="container" style="background-color:gainsboro;margin-top:20px;">

    @using (Html.BeginForm("Add", "Package", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>Add Package</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row" style="margin-top:20px">
                <div class="col-md-3 text-right">
                    @Html.LabelFor(model => model.Offer, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-4">
                    <select name="Offer" class="form-control">
                        <option>Golden offer</option>
                        <option>Diamond offer</option>
                        <option>Silver offer</option>
                        <option>Regular offer</option>
                        <option>Premium offer</option>
                    </select>
                </div>
            </div>

            <div class="row" style="margin-top:20px">
                <div class="col-md-3 text-right">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-6">
                    @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" }, style = "width:60%;height:120px;" })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="row" style="margin-top:20px">
                <div class="col-md-3 text-right">
                    @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-4">
                    <input type="file" name="ImageFile" required />

                </div>
            </div>

            <div class="row" style="margin-top:10px">
                <div class="col-md-4 text-right">
                    <input type="submit" value="Add" class="btn btn-success" style="margin-bottom:10px" />
                </div>
                <td><a href="/Package/Show">Back to list</a></td>
            </div>
        </div>
    }
</div>

<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>