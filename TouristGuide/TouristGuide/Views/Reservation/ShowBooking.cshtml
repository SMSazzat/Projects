@model TouristGuide.Models.Reservation
@{
    Layout = "~/Views/Shared/_user.cshtml";
}

<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        margin: 20px;
        width: 100%;
        margin-top: 30px;
    }

    th {
        font-weight: bold;
        text-align: center;
    }

    td {
        border: 1px;
        text-align: center;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>


<div class="container" style="background-color:gainsboro; margin-top:15px;">
    <div>

        <table>
            <thead>
                <tr>
                    <th><b>Sl</b></th>
                    <th><b>Package Id</b></th>
                    <th><b>Name</b></th>
                    <th><b>Email</b></th>
                    <th><b>Contact</b></th>
                    <th><b>Address</b></th>
                    <th><b>Action</b></th>
                </tr>
            </thead>
            <tbody>
                @{ int sl = 1;}
                @foreach (var reservation in Model.Reservations)
                {
                    <tr>
                        <td>@(sl++)</td>
                        <td>@reservation.PackageId</td>
                        <td>@reservation.Name</td>
                        <td>@reservation.Email</td>
                        <td>@reservation.Contact</td>
                        <td>@reservation.Address</td>
                        <td><a href="/Reservation/DeleteBooking?id=@reservation.Id&userid=@reservation.UserId" class="btn btn-danger">Cancel</a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
