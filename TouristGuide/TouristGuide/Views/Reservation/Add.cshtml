@model TouristGuide.Models.Reservation

@{
    Layout = "~/Views/Shared/_user.cshtml";
}

<title>Add</title>
<link rel="stylesheet" type="text/css" href="~/landing/reservationstyle.css">
<img src="~/landing/image.jpg" width="100%" height="600" />
<div class="login-box">
    <h1>Reservation</h1>
    <form method="post">
        <p>Name</p>
        <input type="text" name="name" placeholder="Enter name" class="form-control" required>
        <p>Email</p>
        <input type="text" name="email" placeholder="Enter Email" class="form-control" required>
        <p>Contact</p>
        <input type="text" name="contact" placeholder="Enter Contact" class="form-control" required>
        <p>Address</p>
        <input type="text" name="address" placeholder="Enter Address" class="form-control" required>
        <input type="submit" value="Confirm Booking">
        @if (ViewBag.successMsg != null)
        {
            <h3 style="text-align:center; color: #fff;font-size:20px;">@ViewBag.successMsg</h3>
        }
        @if (ViewBag.failMsg != null)
        {
            <h3 style="color:darkred;margin-bottom:5px;">@ViewBag.failMsg</h3>
        }
        <div></div>
    </form>

</div>

