@model TouristGuide.Models.NearestSpot

@{
    Layout = "~/Views/Shared/_user.cshtml";
}
<link href="~/Theme/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<script src="~/landing/jquery.min.js"></script>
<script src="~/landing/popper.min.js"></script>
<script src="~/landing/bootstrap.min.js"></script>
<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 10px;
    }

        .card:hover {
            opacity: 0.4;
        }

    img {
        border-radius: 10px 10px 0 0;
    }   

</style>

<div class="row container" style="margin-top:30px;">
    @foreach (var spot in Model.Spots)
    {
        <div class="col-md-3 mt-2 w3_agile_services_grid">
            <div class="card" style="margin-bottom:20px;">
                <div class="hover06 column">
                    <div>
                        <figure><img src="@Url.Content(spot.Image)" style="height:190px; width:400px;" alt="" class="img-responsive" /> </figure>
                    </div>
                </div>
                <h4><b>@spot.Name</b></h4>
                <a href="/Spot/ViewSpot?id=@spot.Id" class="btn btn-primary">show</a>
            </div>

        </div>

    }

</div>
