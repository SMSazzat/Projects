@model TouristGuide.Models.RescueTeam

@{
    Layout = "~/Views/Shared/_admin.cshtml";
}


@if (ViewBag.successMsg != null)
{
    <h3 style="color:black;margin-top:20px;margin-left:50px;"><b>@ViewBag.successMsg</b></h3>
}

@if (ViewBag.failMsg != null)
{
    <h3 style="color:black;margin-top:20px;margin-left:50px;"><b>@ViewBag.failMsg</b></h3>
}



    <body>

        <div class="container" style="background-color:gainsboro;margin-top:20px;">
            @using (Html.BeginForm("Add", "RescueTeam", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Add Rescue Team</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row" style="margin-top:20px">
                        <div class="col-md-3 text-right">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="row" style="margin-top:20px">
                        <div class="col-md-3 text-right">
                            @Html.LabelFor(model => model.Contact, htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row" style="margin-top:20px">
                        <div class="col-md-3 text-right">
                            @Html.LabelFor(model => model.Dictrict, "Dictrict", htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-md-4">
                            @Html.DropDownListFor(c => c.Dictrict, Model.DistrictSelectListItems, null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Dictrict, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="row" style="margin-top:10px">
                        <div class="col-md-4 text-right">
                            <input type="submit" value="Add" class="btn btn-success" style="margin-bottom:10px" />
                        </div>
                        <td><a href="/RescueTeam/Show">Back to list</a></td>
                    </div>
                </div>
            }

        </div>
        <script src="~/Scripts/jquery-3.0.0.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


