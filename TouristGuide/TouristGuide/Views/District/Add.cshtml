@model TouristGuide.Models.District
@{
    Layout = "~/Views/Shared/_admin.cshtml";
}

@if (ViewBag.existMsg != null)
{
    <h3 style="color:darkcyan;margin-top:20px;margin-left:50px;"><b>@ViewBag.existMsg</b></h3>
}

@if (ViewBag.successMsg != null)
{
    <h3 style="color:darkcyan;margin-top:20px;margin-left:50px;"><b>@ViewBag.successMsg</b></h3>
}

@if (ViewBag.failMsg != null)
{
    <h3 style="color:darkcyan;margin-top:20px;margin-left:50px;"><b>@ViewBag.failMsg</b></h3>
}

<div class="container" style="background-color:gainsboro" margin-top:20px;">
    <h2>Add District</h2>

    <form method="post">

        <div class="row" style="margin-top:20px">
            <div class="col-md-1"></div>
            <div class="col-md-2 text-right"> @Html.LabelFor(c => c.DistrictCode)</div>
            <div class="col-md-3">
                @Html.TextBoxFor(c => c.DistrictCode, null, htmlAttributes: new { @class = "form-control", placeholder = "District Code" })
                @Html.ValidationMessageFor(model => model.DistrictCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row" style="margin-top:20px">
            <div class="col-md-1"></div>
            <div class="col-md-2 text-right"> @Html.LabelFor(c => c.DistrictName)</div>
            <div class="col-md-3">
                @Html.TextBoxFor(c => c.DistrictName, null, htmlAttributes: new { @class = "form-control", placeholder = "District Name" })
                @Html.ValidationMessageFor(model => model.DistrictName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row" style="margin-top:10px;">
            <div class="col-md-3"></div>
            <div class="col-md-1">
                <input type="submit" class="btn btn-success" Value="Add" style="margin-bottom:10px;" />
            </div>

            <td><a href="/District/Show">Back to list</a></td>
        </div>

    </form>
</div>
<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
